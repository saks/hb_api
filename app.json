{
    "addons": [
        {
            "plan": "heroku-postgresql:hobby-dev",
            "as": "DATABASE"
        },
        {
            "plan": "heroku-redis:hobby-dev",
            "as": "REDIS"
        }
    ],
    "buildpacks": [
        { "url": "https://github.com/emk/heroku-buildpack-rust" },
        { "url": "heroku/nodejs" }
    ],
    "env": {
        "AUTH_TOKEN_SECRET": {
            "required": true,
            "generator": "secret"
        },
        "DATABASE_URL": {
            "required": true
        },
        "FORCE_HTTPS": {
            "required": true,
            "value": "true"
        },
        "REDIS_URL": {
            "required": true
        },
        "RUST_BACKTRACE": {
            "required": false
        },
        "RUST_LOG": {
            "required": false
        },
        "LISTEN_IP": {
            "required": true,
            "value": "0.0.0.0"
        }
    },
    "formation": {
        "web": {
            "quantity": 1
        }
    },
    "name": "hb_api",
    "scripts": {
        "postdeploy": "make build_client"
    },
    "stack": "heroku-18"
}
